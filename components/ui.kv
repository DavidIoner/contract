<App@MDFloatLayout>

    MDTextField:
        id: licensee
        hint_text: "Licensee principal name"
        pos_hint: {"x": 0.05, "y": 0.9}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()
    
    MDTextField:
        id: company
        hint_text: "Company name"
        pos_hint: {"x": 0.05, "y": 0.8}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: located_at
        hint_text: "Located at"
        pos_hint: {"x": 0.05, "y": 0.7}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: phone
        hint_text: "Phone number"
        pos_hint: {"x": 0.05, "y": 0.6}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: licensor
        hint_text: "Licensor name"
        pos_hint: {"x": 0.05, "y": 0.5}
        text: "Nigel Shamash"
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: email
        hint_text: "E-mail"
        pos_hint: {"x": 0.05, "y": 0.4}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: worker
        hint_text: "Worker Name"
        pos_hint: {"x": 0.05, "y": 0.3}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: onboard
        hint_text: "Onboarding deposit (MXN)"
        pos_hint: {"x": 0.55, "y": 0.9}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: security
        hint_text: "Security deposit (MXN)"
        pos_hint: {"x": 0.55, "y": 0.8}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: apartment
        hint_text: "apartment fee (MXN))"
        pos_hint: {"x": 0.55, "y": 0.7}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: wage_MXN
        hint_text: "Wage (MXN)"
        pos_hint: {"x": 0.55, "y": 0.6}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: christmas_MXN
        hint_text: "Christmas bonus (MXN)"
        pos_hint: {"x": 0.55, "y": 0.5}
        size_hint_x: 0.4   
        write_tab: False
        multiline: False
        on_text_validate: root.foo()

    MDTextField:
        id: desk_fee_USD
        hint_text: "fee per desk"
        text: "200"
        pos_hint: {"x": 0.55, "y": 0.4}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: root.foo()



    MDRaisedButton:
        id: btn
        text: "Submit"
        pos_hint: {"x": 0.55, "y": 0.2}
        size_hint: 0.2, 0.1
        on_release: 
            app.submit()

    MDLabel:
        id: label
        text: ""
        pos_hint: {"x": 0.55, "y": 0.1}
        size_hint: 0.4, 0.1
    
    MDLabel:
        id: error_label
        text: ""
        pos_hint: {"x": 0.55, "y": 0}
        size_hint: 0.4, 0.1

    MDDropDownItem:
        id: drop_local
        pos_hint: {"x": 0.05, "y": 0.2}
        text: 'select the location'
        size_hint: 0.4, 0.1
        on_release: app.menu.open()

    MDSwitch:
        id: onboard_select
        pos_hint: {"x": 0.47, "y": 0.9}

        on_active: app.check_onboard(*args)
    
    MDSwitch:
        id: security_select
        pos_hint: {"x": 0.47, "y": 0.8}
 

        on_active: app.check_security(*args)

    MDSwitch:
        id: apartment_select
        pos_hint: {"x": 0.47, "y": 0.7}

        on_active: app.check_apartment(*args)

    MDSwitch:
        id: holiday_fee
        pos_hint: {"x": 0.55, "y": 0.3}

        on_active: app.check_holiday(*args)

    MDLabel:
        id: holiday_label
        text: "Holiday fee deactivated"
        pos_hint: {"x": 0.7, "y": 0.3}
        size_hint: 0.4, 0.1
        

App